<h1 class="mb-4">Edit Product</h1>

<form action="/products/<%= product._id %>?_method=PUT" method="POST" class="card p-4 shadow-sm">

  <div class="mb-3">
    <label for="name" class="form-label">Product Name</label>
    <input 
      type="text" 
      id="name" 
      name="name" 
      class="form-control" 
      value="<%= product.name %>" 
      required
    >
  </div>

  <div class="mb-3">
    <label for="price" class="form-label">Price (unit)</label>
    <input 
      type="number" 
      id="price" 
      name="price" 
      class="form-control" 
      value="<%= product.price %>" 
      required
    >
  </div>

  <div class="mb-3">
    <label for="category" class="form-label">Select Category</label>
    <select id="category" name="category" class="form-select">
      <% for (let c of categories) { %>
        <option value="<%= c %>" <%= product.category === c ? "selected" : "" %>><%= c %></option>
      <% } %>
    </select>
  </div>


  <button type="submit" class="btn btn-primary me-1 mb-3">Update</button>
  <a href="/products/<%= product._id %>" class="btn btn-secondary">Cancel</a>
</form>
