
<h1 class="mb-4">Add a New Product</h1>

<form action="/products" method="post" class="card p-4 shadow-sm">
  <div class="mb-3">
    <label for="name" class="form-label">Product Name</label>
    <input type="text" name="name" id="name" class="form-control" placeholder="Product name" required>
  </div>

  <div class="mb-3">
    <label for="price" class="form-label">Price (unit)</label>
    <input type="number" name="price" id="price" class="form-control" step="0.01" min="0" required>
  </div>

  <div class="mb-3">
    <label for="category" class="form-label">Select Category</label>
    <select name="category" id="category" class="form-select">
      <% for(let category of categories){ %>
        <option value="<%= category %>"><%= category %></option>
      <% } %>
    </select>
  </div>

  <button class="btn btn-success me-1 mb-3">Submit</button>
  <a href="/products" class="btn btn-secondary">Cancel</a>
</form>
